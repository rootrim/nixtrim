(defpoll time :interval "1s"
  `date "+%H:%M:%S"`)

(deflisten songtist :initial "Musci"
  `playerctl --follow metadata --format "{{artist}} - {{title}}"`)

(defwidget clock []
  (box :orientation "horizontal"
       :halign "right"
    (label :text time)))

(defwidget music []
  (box :orientation "horizontal"
       :halign "center"
    (button :onclick "playerctl play-pause -p spotify" songtist)))

(defwidget left [] 
  (box :orientation "horizontal"
    :halign "start"
    (label :text "I Use NixOS")))

(defwidget right []
  (box :orientation "horizontal"
    :halign "end"
    (clock)))

(defwidget center []
  (box :orientation "horizontal"
    :halign "center"
    (music)))

(defwidget toc []
  (centerbox :orientation "horizontal"
    (left)
    (center)
    (right)))

(defwindow exbar
  :monitor 0
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "100%"
                      :height "28px"
                      :anchor "top center")
  :stacking "overlay"
  :exclusive true
  :focusable false
  :namespace "KONODIODA"
  (toc))
