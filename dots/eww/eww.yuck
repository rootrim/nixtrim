(defwindow exbar
  :monitor 0
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "100%"
                      :height "28px"
                      :anchor "top center")
  :stacking "overlay"
  :exclusive true
  :focusable false
  :namespace "KONODIODA"
  (music))




(defwidget music []
  (box :orientation "horizontal"
       :halign "center"
    (button :onclick "playerctl play-pause -p spotify" "Start-Stop")))
